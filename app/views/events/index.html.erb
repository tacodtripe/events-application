<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.start %></td>
        <td><%= event.title %></td>
        <td><%= link_to 'Show', event %></td>
        <% if user_signed_in? && current_user.id == event.user_id %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

<br>

<% if user_signed_in? %>
  <h1>
    Events confirmed to attend:
  </h1>
  <div>
    <% Attendance.all.each do |f| %>
      <ul>
        <% if current_user.id == f.attendee_id %>
          <li>
            <%= Event.find_by(id: "#{f.event_to_attend_id}")[:title] %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>